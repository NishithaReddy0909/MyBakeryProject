@model MyBakeryProject.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="row">
    <div class="col-md-5">
        <form>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Description"></span>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <div class="custom-file">
                    <input asp-for="ImageFile" type="file" class="custom-file-input" id="imgProductFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="ImageFile"></span>
            </div>
            
                <div class="form-group">
                    <input type="submit" id="cmdCreate" class="btn btn-outline-success" value="Add New" />
                </div>
            

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    $(function () {
        $("#imgProductFile").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(fileName);
        });
    });
    </script>
}